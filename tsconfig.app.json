{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  // "include": ["env.d.ts", "src/**/*", "src/**/*.vue" ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue", // この行を追加
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
